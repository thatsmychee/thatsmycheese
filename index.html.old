<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ThatsMyCheese</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      width: 100%;
      overflow: hidden;
    }

    body {
      /* Display your sketch as the full background */
      background-image: url('./background.jpg');
      background-size: contain; /* Shows FULL image without cropping */
      background-position: center center;
      background-repeat: no-repeat;
      background-color: #5b5478;
      
      /* Very subtle Y2K enhancement - barely visible */
      position: relative;
    }

    /* Subtle glossy overlay - very light so sketch shows through */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.03) 0%, transparent 60%);
      pointer-events: none;
      z-index: 1;
    }

    /* Container for future interactive elements */
    .container {
      width: 100%;
      height: 100%;
      position: relative;
      z-index: 2;
    }

    /* Clickable menu button overlay - positioned over your sketch's menu */
    .menu-button {
      position: absolute;
      top: 5%;
      left: 3%;
      width: 120px;
      height: 90px;
      cursor: pointer;
      z-index: 10;
      background: transparent;
      border: 2px dashed transparent;
      transition: all 0.3s ease;
    }

    .menu-button:hover {
      border: 2px dashed rgba(255, 255, 255, 0.3);
      transform: scale(1.05);
    }

    /* Email input overlay - positioned over your sketch's input field */
    .email-capture {
      position: absolute;
      top: 60%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 500px;
      max-width: 90%;
      z-index: 10;
    }

    .email-input {
      width: 100%;
      padding: 15px 20px;
      background: transparent;
      border: none;
      color: #fff;
      font-size: 16px;
      outline: none;
      text-align: center;
      cursor: pointer;
    }

    .email-input::placeholder {
      color: transparent;
    }

    .email-input:focus {
      background: rgba(80, 70, 100, 0.3);
      border-radius: 25px;
    }

    /* Hidden submit button - press Enter to submit */
    .submit-btn {
      display: none;
    }

    /* Success message */
    .success-message {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(0, 0, 0, 0.9);
      color: #fff;
      padding: 30px 50px;
      border-radius: 20px;
      font-size: 18px;
      z-index: 100;
      text-align: center;
    }

    .success-message.show {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translate(-50%, -40%); }
      to { opacity: 1; transform: translate(-50%, -50%); }
    }

    /* Hamburger menu overlay */
    .menu-overlay {
      position: fixed;
      top: 0;
      left: -100%;
      width: 300px;
      height: 100vh;
      background: rgba(60, 50, 80, 0.95);
      backdrop-filter: blur(10px);
      z-index: 1000;
      transition: left 0.3s ease;
      padding: 80px 30px 30px;
      box-shadow: 2px 0 20px rgba(0, 0, 0, 0.5);
    }

    .menu-overlay.open {
      left: 0;
    }

    .menu-close {
      position: absolute;
      top: 20px;
      right: 20px;
      font-size: 40px;
      color: #fff;
      cursor: pointer;
      background: none;
      border: none;
      line-height: 1;
    }

    .menu-items {
      list-style: none;
      padding: 0;
    }

    .menu-items li {
      margin: 30px 0;
    }

    .menu-items a {
      color: #fff;
      text-decoration: none;
      font-size: 24px;
      transition: all 0.3s;
      display: block;
      padding: 10px;
      border-left: 3px solid transparent;
    }

    .menu-items a:hover {
      color: #c9b3ff;
      border-left: 3px solid #c9b3ff;
      padding-left: 20px;
    }

    /* Responsive scaling - all devices show full image */
    /* Mobile - portrait */
    @media (max-width: 768px) and (orientation: portrait) {
      body {
        background-size: contain;
        background-position: center;
      }
    }

    /* Mobile - landscape */
    @media (max-width: 768px) and (orientation: landscape) {
      body {
        background-size: contain;
        background-position: center;
      }
    }

    /* Tablet */
    @media (min-width: 769px) and (max-width: 1024px) {
      body {
        background-size: contain;
        background-position: center;
      }
    }

    /* Desktop - normal screens */
    @media (min-width: 1025px) and (max-width: 1920px) {
      body {
        background-size: contain;
        background-position: center;
      }
    }

    /* Large desktop - show full image */
    @media (min-width: 1921px) {
      body {
        background-size: contain;
        background-position: center;
      }
    }
  </style>
</head>
<body>
  <!-- Hamburger Menu Overlay -->
  <div class="menu-overlay" id="menuOverlay">
    <button class="menu-close" onclick="closeMenu()">&times;</button>
    <ul class="menu-items">
      <li><a href="#home">Home</a></li>
      <li><a href="#about">About</a></li>
      <li><a href="#work">Work</a></li>
      <li><a href="#contact">Contact</a></li>
    </ul>
  </div>

  <div class="container">
    <!-- Clickable menu button positioned over your sketch's menu -->
    <div class="menu-button" onclick="openMenu()" title="Open Menu"></div>

    <!-- Email capture form positioned over your sketch's input field -->
    <form class="email-capture" id="emailForm" onsubmit="handleSubmit(event)">
      <input 
        type="email" 
        class="email-input" 
        id="emailInput"
        placeholder=""
        required
      />
      <button type="submit" class="submit-btn">Submit</button>
    </form>

    <!-- Success message -->
    <div class="success-message" id="successMessage">
      <p>✨ You're on the list! ✨</p>
      <p style="font-size: 14px; margin-top: 10px;">Check your email soon.</p>
    </div>
  </div>

  <script>
    // Menu functions
    function openMenu() {
      document.getElementById('menuOverlay').classList.add('open');
    }

    function closeMenu() {
      document.getElementById('menuOverlay').classList.remove('open');
    }

    // Email capture
    function handleSubmit(event) {
      event.preventDefault();
      
      const email = document.getElementById('emailInput').value;
      
      // Store email (you can connect this to a backend later)
      console.log('Email captured:', email);
      
      // Show success message
      const successMsg = document.getElementById('successMessage');
      successMsg.classList.add('show');
      
      // Clear input
      document.getElementById('emailInput').value = '';
      
      // Hide success message after 3 seconds
      setTimeout(() => {
        successMsg.classList.remove('show');
      }, 3000);
      
      // Here you would typically send to your backend
      // Example: fetch('/api/subscribe', { method: 'POST', body: JSON.stringify({ email }) })
    }

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const menu = document.getElementById('menuOverlay');
      const menuBtn = document.querySelector('.menu-button');
      
      if (menu.classList.contains('open') && 
          !menu.contains(e.target) && 
          !menuBtn.contains(e.target)) {
        closeMenu();
      }
    });
  </script>
</body>
</html>